{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    { "src": "/(.*)", "status": 404, "dest": "/404.html" }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
